<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>MyController</servlet-name>
  	<display-name>MyController</display-name>
  	<description></description>
  	<servlet-class>com.example.controller.MyController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ErrorServlet</servlet-name>
  	<display-name>ErrorServlet</display-name>
  	<description></description>
  	<servlet-class>com.example.view.ErrorServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SuccessServlet</servlet-name>			
  	<display-name>SuccessServlet</display-name>
  	<description></description>
  	<servlet-class>com.example.view.SuccessServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>list_employees</servlet-name>
  	<display-name>list_employees</display-name>
  	<description></description>
  	<servlet-class>com.example.view.list_employees</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddLeagueViewServlet</servlet-name>
  	<display-name>AddLeagueViewServlet</display-name>
  	<description></description>
  	<servlet-class>com.example.view.AddLeagueViewServlet</servlet-class>
  </servlet>
  <init-param>
  		<param-name>seasons</param-name>
  		<param-value>Summer,Winter,Autumn,Rainy</param-value>
  	</init-param>
  <servlet-mapping>
  	<servlet-name>MyController</servlet-name>
  	<url-pattern>/controller.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SuccessServlet</servlet-name>
  	<url-pattern>/success.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ErrorServlet</servlet-name>
  	<url-pattern>/error.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>list_employees</servlet-name>
  	<url-pattern>/list_employees.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddLeagueViewServlet</servlet-name>
  	<url-pattern>/add_league.view</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  <welcome-file>add_league.html</welcome-file>
  </welcome-file-list>
</web-app>